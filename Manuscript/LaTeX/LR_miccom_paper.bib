doi = {10.1371/journal.pbio.3000106},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/PLoS biology/2019/Louca et al. - 2019 - A census-based estimate of Earth's bacterial and archaeal diversity.pdf:pdf},
isbn = {1111111111},
issn = {15457885},
