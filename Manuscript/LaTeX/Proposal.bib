doi = {10.1371/journal.pone.0093945},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/PLoS ONE/2014/Herlemann et al. - 2014 - Uncoupling of bacterial and terrigenous dissolved organic matter dynamics in decomposition experiments.pdf:pdf},
isbn = {1932-6203},
