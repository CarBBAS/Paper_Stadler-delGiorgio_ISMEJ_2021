doi = {10.1002/lno.10258},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/Limnology and Oceanography/2016/Amaral et al. - 2016 - Strong linkages between DOM optical properties and main clades of aquatic bacteria.pdf:pdf},
issn = {19395590},
journal = {Limnology and Oceanography},
keywords = {DOM+MO,MLR,fluorescence,goodIntro},
mendeley-tags = {DOM+MO,MLR,fluorescence,goodIntro},
number = {3},
pages = {906--918},
title = {{Strong linkages between DOM optical properties and main clades of aquatic bacteria}},
