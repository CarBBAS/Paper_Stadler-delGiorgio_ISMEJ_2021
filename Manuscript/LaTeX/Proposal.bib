journal = {Journal of Molecular Biology},
keywords = {KEGG, Kyoto encyclopedia of genes and genomes,ORFs, open reading frames,comparative genomics,functional genomics,metabolic databases,metabolic pathways,phylogenetic profiles},
number = {3},
pages = {491--512},
pmid = {15210350},
title = {{Analysis of phenetic trees based on metabolic capabilites across the three domains of life}},
