issn = {1664302X},
journal = {Frontiers in Microbiology},
keywords = {Competition,Cyanobacteria,Dolichospermum,Ecological niche,Habitat filtering,Microcystis,Niche partitioning},
number = {MAR},
pages = {1--26},
title = {{Niche separation increases with genetic distance among bloom-forming cyanobacteria}},
