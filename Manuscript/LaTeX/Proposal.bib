eprint = {arXiv:1011.1669v3},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/Ecography/2006/Gotelli, McGill - 2006 - Null versus neutral models What's the difference.pdf:pdf},
isbn = {0906-7590},
issn = {09067590},
journal = {Ecography},
number = {5},
pages = {793--800},
pmid = {312},
title = {{Null versus neutral models: What's the difference?}},
volume = {29},
year = {2006}
}
