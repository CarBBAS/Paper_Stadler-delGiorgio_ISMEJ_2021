file = {:media/shared/Documents/University/PhD/ScientificLiterature/Applied and Environmental Microbiology/2005/Hahn, P{\"{o}}ckl - 2005 - Ecotypes of planktonic actinobacteria with identical 16S rRNA genes adapted to thermal niches in temperate, subtro.pdf:pdf},
isbn = {0099-2240},
issn = {00992240},
journal = {Applied and Environmental Microbiology},
number = {2},
pages = {766--773},
pmid = {15691929},
title = {{Ecotypes of planktonic actinobacteria with identical 16S rRNA genes adapted to thermal niches in temperate, subtropical, and tropical freshwater habitats}},
volume = {71},
year = {2005}
}
