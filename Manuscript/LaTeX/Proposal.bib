file = {:media/shared/Documents/University/PhD/ScientificLiterature/Advances in Oceanography and Limnology/2017/Ruiz-Gonz{\'{a}}lez et al. - 2017 - Contrasting dynamics and environmental controls of dispersed bacteria along a hydrologic gradient.pdf:pdf},
issn = {1947-573X},
journal = {Advances in Oceanography and Limnology},
keywords = {aquatic bacterial communities,dispersal,environmental sorting,illumina sequencing,river continuum},
number = {2},
pages = {222--234},
pmid = {24603879},
title = {{Contrasting dynamics and environmental controls of dispersed bacteria along a hydrologic gradient}},
