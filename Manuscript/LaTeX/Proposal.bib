doi = {10.1038/ismej.2015.191},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/The ISME journal/2016/Nemergut et al. - 2016 - Decreases in average bacterial community rRNA operon copy number during succession.pdf:pdf},
isbn = {1751-7362},
