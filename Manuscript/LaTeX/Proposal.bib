journal = {Water Resources Research},
keywords = {biogeochemistry,boreal catchments,dissolved organic carbon,hydrology,modeling,uncertainty analysis},
pages = {514--525},
title = {{Downstream changes in DOC: Inferring contributions in the face of model uncertainties}},
volume = {50},
year = {2014}
}
@article{Cole2007,
