file = {:media/shared/Documents/University/PhD/ScientificLiterature/Proceedings of the National Academy of Sciences/2014/Pedler, Aluwihare, Azam - 2014 - Single bacterial strain capable of significant contribution to carbon cycling in the surface ocean.pdf:pdf},
isbn = {1091-6490 (Electronic)\r0027-8424 (Linking)},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {20},
pages = {7202--7207},
