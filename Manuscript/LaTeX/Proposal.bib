journal = {ISME Journal},
keywords = {bacterioplankton,freshwater,respiratory quotient},
number = {5},
pages = {984--993},
pmid = {22094347},
title = {{Magnitude and regulation of bacterioplankton respiratory quotient across freshwater environmental gradients}},
