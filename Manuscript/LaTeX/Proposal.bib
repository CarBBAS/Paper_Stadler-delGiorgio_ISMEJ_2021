doi = {10.1016/j.watres.2016.04.036},
file = {:media/shared/Documents/University/PhD/ScientificLiterature/Water Research/2016/Butturini et al. - 2016 - Hydrological conditions control in situ DOM retention and release along a Mediterranean river.pdf:pdf},
isbn = {4025594390},
issn = {18792448},
journal = {Water Research},
keywords = {Dissolved organic matter,Floods and droughts,Humic and protein-like moieties,Hydrological extremes,Mass balance,Mediterranean rivers,Molecular size distribution},
pages = {33--45},
title = {{Hydrological conditions control in situ DOM retention and release along a Mediterranean river}},
volume = {99},
