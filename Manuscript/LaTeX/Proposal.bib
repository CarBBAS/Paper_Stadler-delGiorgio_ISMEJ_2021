file = {:media/shared/Documents/University/PhD/ScientificLiterature/Ecosystems/1999/Cole - 1999 - Aquatic microbiology for ecosystem scientists New and recycled paradigms in ecological microbiology.pdf:pdf},
isbn = {1432-9840},
