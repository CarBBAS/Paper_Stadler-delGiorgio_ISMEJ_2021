issn = {17517362},
journal = {ISME Journal},
keywords = {454 pyrosequencing,bacterial diversity,coastal seas,multivariate analysis,rare biosphere},
number = {3},
pages = {542--553},
pmid = {21975598},
title = {{Diversity and dynamics of rare and of resident bacterial populations in coastal sands}},
